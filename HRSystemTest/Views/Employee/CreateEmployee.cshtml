@model HRSystemTest.Models.CreateEmployeeModel

@{
    ViewBag.Title = "CreateEmployee";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Create Employee</h1>
<form asp-action="CreateEmployee">
    <div class="space">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <label asp-for="@Model.Employee.Name"></label>
        <input asp-for="@Model.Employee.Name" />
        <span asp-validation-for="@Model.Employee.Name" class="text-danger"></span>
    </div>
    <div class="space">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <label asp-for="@Model.Employee.Address"></label>
        <input asp-for="@Model.Employee.Address" />
        <span asp-validation-for="@Model.Employee.Address" class="text-danger"></span>
    </div>
    <div class="space">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <label asp-for="@Model.Employee.Salary"></label>
        <input asp-for="@Model.Employee.Salary" />
        <span asp-validation-for="@Model.Employee.Salary" class="text-danger"></span>
    </div>


    @*<h2>Select Department</h2>
        <div class="space between">
                <label asp-for="@Model.Employee.Dep_Id">Select Department</label>
                <select asp-for="@Model.Employee.Dep_Id" asp-items="@Model.Departments">
                    <option value="">Select City</option>
                </select>
            </div>*@
    <div class="form-group">
        <label asp-for="@Model.Employee.Dep_Id"></label>
        <select asp-for="@Model.Employee.Dep_Id" class="form-control" asp-items="@Model.Departments"></select>
    </div>
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>


    <div class="space">
        <input type="submit" value="submit" />
    </div>
</form>

